<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Table</title>
  <style>
    body {
      font-family: 'Garamond', serif;
      background-color: #121212;
      background-image: url('https://www.toptal.com/designers/subtlepatterns/patterns/dark_embroidery.png');
      color: #f5f5f5;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      animation: fadeIn 1s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .container {
      width: 80%;
      margin: 20px;
      animation: slideIn 1s ease-in-out;
    }

    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .home-button {
      margin: 10px;
      padding: 10px 20px;
      background-color: #d4af37;
      color: #121212;
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .home-button:hover {
      background-color: #b8860b;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin: 20px auto;
      background-color: #1f1f1f;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: center;
      color: #f5f5f5;
    }

    th {
      background-color: #2a2a2a;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #2a2a2a;
    }

    tr:hover {
      background-color: #333333;
    }

    .icon {
      cursor: pointer;
      color: #d4af37;
      transition: color 0.3s;
    }

    .icon:hover {
      color: #b8860b;
    }
  </style>
</head>

<body>
  <div class="container">
    <a href="/" class="home-button">Home</a>
    <table>
      <tr>
        <th>ID</th>
        <th>Paisakaran</th>
        <th>Kadakaran</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Delete</th>
      </tr>
      <% data.forEach(item => { %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.paisakaran %></td>
        <td><%= item.kadakaran %></td>
        <td><%= item.date %></td>
        <td><%= item.amount %></td>
        <td>
          <a href="/action/<%= item.id %>/<%= item.paisakaran %>" class="icon">ðŸ”—</a>
        </td>
      </tr>
      <% }); %>
    </table>
  </div>
</body>

</html>
