<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>House Members</title>
  <style>
    body {
      font-family: 'Garamond', serif;
      background-color: #121212;
      background-image: url('https://www.toptal.com/designers/subtlepatterns/patterns/dark_embroidery.png');
      color: #f5f5f5;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      overflow-y: auto;
      padding: 20px;
      animation: fadeIn 1s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .container {
      max-width: 900px;
      width: 100%;
      background-color: #1f1f1f;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);
      padding: 30px;
      border-radius: 15px;
      position: relative;
      animation: slideIn 1s ease-in-out;
    }

    @keyframes slideIn {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #d4af37;
      font-size: 2.5em;
      font-weight: bold;
    }

    #newPostBtn {
      display: inline-block;
      background-color: #d4af37;
      color: #121212;
      padding: 12px 18px;
      text-decoration: none;
      border-radius: 10px;
      position: absolute;
      top: 20px;
      right: 20px;
      transition: background-color 0.3s;
    }

    #newPostBtn:hover {
      background-color: #b8860b;
    }

    #postsList {
      list-style: none;
      padding: 0;
      max-height: 500px;
      overflow-y: auto;
      margin: 0;
    }

    #postsList li {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
      background-color: #2a2a2a;
      padding: 15px;
      border-radius: 10px;
      transition: transform 0.3s;
    }

    #postsList li:hover {
      transform: scale(1.05);
    }

    #postsList img {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin-right: 20px;
    }

    #postsList h2 {
      margin: 0;
      flex-grow: 1;
      color: #d4af37;
    }

    .edit {
      text-decoration: none;
      color: #121212;
      background-color: #d4af37;
      padding: 8px 12px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .edit:hover {
      background-color: #b8860b;
    }

    .cash-deal {
      display: block;
      text-align: center;
      background-color: #d4af37;
      color: #121212;
      padding: 15px 20px;
      text-decoration: none;
      border-radius: 10px;
      margin-top: 20px;
      transition: background-color 0.3s;
    }

    .cash-deal:hover {
      background-color: #b8860b;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>House Members</h1>
    <a id="newPostBtn" href="/new">New member</a>
    <ul id="postsList">
      <% detail.forEach(post => { %>
        <li>
          <div style="display: flex; align-items: center;">
            <img src="/uploads/<%= post.photo %>" alt="<%= post.name %>">
            <h2><%= post.name %></h2>
          </div>
          <a class="edit" href="/edit/<%= post.id %>">Money detail</a>
        </li>
      <% }); %>
    </ul>
    <a class="cash-deal" href="/cash-deal">Cash Deal</a>
  </div>
</body>

</html>
